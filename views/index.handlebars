<h2 class="page-header">NEWS</h2>
<br>
<br> {{#if news}}
<table style="text-align:center">
  
  <tr>
    <th style="padding-bottom:20px">CATEGORY</th>
    <th style="text-align:center;padding-bottom:20px">TITLE</th>
  </tr>
  <tr><th></th><th></th></tr>
  {{#each news}}

  <tr>
    {{!--
    <th> {{PUBLISHER}}</th> --}} {{!--
    <th></th> --}}
    <td style="text-align:center; text-transform:uppercase;font-size:20px "> {{CATEGORY}} </td>
    <td style="text-align:center;font-size:15px">
      <a onclick="clicked({{ID}})" id="{{ID}}" href="{{URL}}">{{TITLE}} </a>
    </td>
  </tr>
  {{/each}}</table> {{/if}}

<script>
  
  function clicked(id) {
    console.log("in function clicked");
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function () {
      if (this.readyState == 4 && this.status == 200) {
        alert("store clicked");
      }
    };
    xhttp.open("GET", "/news/process/" + encodeURI(id), true);
    xhttp.send();


    // alert(encodeURI(element.href),element.href);
    //window.location.href = "/news/process/" + encodeURI(id);

    //return false; // prevent default action and stop event propagation
  };
</script>